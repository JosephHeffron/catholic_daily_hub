{
  "name": "catholic-daily-hub",
  "version": "0.1.0",
  "private": true,
  "engines": { "node": ">=20 <21" },
  "packageManager": "npm@10",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "format": "prettier --write .",

    "postinstall": "node -e \"const isCI=require('is-ci'); isCI ? console.log('shadcn init skipped in CI') : console.log('shadcn init is a local-only step; run npx shadcn-ui@latest init when needed')\"",
    "prepare": "node -e \"const isCI=require('is-ci'); if(isCI){console.log('husky install skipped in CI')}else{require('child_process').execSync('husky install',{stdio:'inherit'})}\""
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "next-intl": "3.17.2",
    "tailwindcss": "3.4.13",
    "clsx": "2.1.1",
    "lucide-react": "0.460.0",
    "zustand": "4.5.2",
    "zod": "3.23.8",
    "@vercel/analytics": "1.3.1",
    "next-pwa": "5.6.0",
    "workbox-window": "7.1.0",
    "@upstash/redis": "1.30.1"
  },
  "devDependencies": {
    "@types/node": "20.14.12",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.47",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "prettier": "3.3.3",
    "@testing-library/react": "16.0.0",
    "@testing-library/jest-dom": "6.4.8",
    "jsdom": "24.1.0",
    "vitest": "2.1.3",
    "@vitejs/plugin-react": "4.3.4",
    "vite-tsconfig-paths": "4.3.2",
    "@types/jsdom": "21.1.7",
    "playwright": "1.48.2",
    "typescript": "5.6.2",
    "is-ci": "^3.0.1",
    "husky": "^9.1.6"
  }
}
